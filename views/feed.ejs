<%- include('../views/partials/head'); %>
    <%- include('../views/partials/header'); %>
        <%- include('../views/partials/aside'); %>
            <main>

                <div class="container container-feed">
                    <!--COLOCAR UM ID DA PAGINA-->
                    <!--AQUI VAI O CÓDIGO DE CADA PÁGINA-->
                    <section class="card-postagem">
                        <div class="title card-postagem-titulo">
                            <i id="post-edit-icon" class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            <p class="text">O que <%= usuario.nome_usuario %> está fazendo ?</p>
                        </div>
                        <form class="formulario-postagem" method="POST" action="/feed" enctype="multipart/form-data">
                            <div class="input-group">
                                <label for="insertPost">Label</label>
                                <textarea name="insertPost" id="insert-post" cols="30" rows="10"></textarea>
                            </div>
                            <div class="form-post-group-btn">
                                <div class="btn-media-group">

                                    <!-- <imput type="file" name="files"></imput> -->

                                    <input type="file" name="image" id="btn-camera" accept="image/*" class="btn-insert-media" value="fas fa-camera">
                                        <i class="fas fa-camera"></i>
                                    </input>

                                    <button id="btn-play" class="btn-insert-media">
                                        <i class="fas fa-play"></i>
                                    </button>

                                </div>

                                <input type="submit" id="btn-post" class="btn btn-blue"  value="Postar">


                            </div>
                        </form>

                    </section>

                    <% JSON.stringify(public) %>
                        <% for(let pubFeed of public){ %>
                            <section class="card-feed">
                                <div class="header-feed card-feed-header">
                                    <div class="img-user" id="user-text">
                                        <img src="<%= pubFeed.img_user%>" alt="imagem-usuario">
                                        <div class="card-feed--header-text">
                                            <a class="user-name-card"><%= pubFeed.nome %></a>
                                            <p class="text-feed">
                                                <%= pubFeed.texto %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="image-feed">
                                    <img id="imgId" src="images_pub/<%= pubFeed.img_pub %>" alt="image-feed">
                                </div>

                                <div class="feed-comentarios">
                                    <button class="heart-feed-button">
                                        <i class="fas fa-heart"></i>
                                    </button>

                                    <p class="likes">50 Likes</p>
                                    <a class="comentarios">3 Comentários</a>
                                </div>

                            </section>
                            <% } %>

                </div>
            </main>

    </body>

</html>